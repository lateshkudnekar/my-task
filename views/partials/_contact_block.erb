<form id='contact-form' method="post">

  <div class="form-group">

    <input type=text name=name class="form-control" placeholder="Name"/>
  </div>

  <div class="form-group">

    <input type=text name=phone class="form-control" placeholder="Contact no"/>
  </div>

  <div class="form-group">

    <input type=email name=email class="form-control" placeholder="Email"/>
  </div>

  <div class="form-group" style="display: none;" id="selected-products">
    <h5>Selected Products</h5>
    <input type="hidden" name="selected_products" value="" />
    <ul>

    </ul>
  </div>

  <div class="form-group">

    <textarea rows="8" class="form-control" name=message placeholder="Message"></textarea>
  </div>
  <div>
    <%= recaptcha_tags(:stoken=>false)%>
  </div>

  <div class="form-group">
    <h5 id="form-message"></h5>
  </div>
  <button type="button" onclick="$.fn.validateContacts()" class="btn btn-primary">Submit</button>
</form>
