<div class="page-nav">
  <div class="container">
    <h4 class="page-title">Portfolio</h4>
    <ol class="breadcrumb pull-right">
      <li>
        <a href="#">Home</a>
      </li>
      <li>
        <a href="#">Products</a>
      </li>
      <li>
        <a href="#"><%=@product.title%></a>
      </li>
    </ol>
  </div>
</div>

<div class="container content-container">
  <div class="row">
    <div class="col-md-12">
      <h2><%=@product.title %></h2>
      <p><%=@product.description %></p>
      <%if !@product.images.empty?%>
        <%@product.images.each do |image|%>
          <%if image.priority == 1%>
          <%end%>
        <%end%>
        <p>	<img src="/images/product/thumbs/<%=@product.images[0].image %>"  width="100" height="100"/></p>

      <%end%>
      <p> <a href="\products\<%=@product.id%>\edit">Edit</a></p>
      <p> <a href="\products\<%=@product.id%>\download">download</a></p>
    </div>
  </div>
  <div class="row">
    <%@product.applications.each do |application|%>
      <span class="badge"><%=application.title%></span>
    <%end%>
  </div>
  <hr>
  <div class="row">
    <%=partial(:"partials/_products_block", :layout => false, :locals => { :products =>@products })%>
  </div>
</div>
